{
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "bracketSpacing": true,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "endOfLine": "auto",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^next",
    "^next(.*)",
    "^react",
    "^react(.*)",
    "<THIRD_PARTY_MODULES>",
    "^@app/(.*)$",
    "^@hooks",
    "^@hooks/(.*)$",
    "^@components",
    "^@components/(.*)$",
    "^@states",
    "^@states/(.*)$",
    "^@styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
